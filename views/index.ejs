<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">

</head>

<body>
    <header class="bg-dark py-2">
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <a href="/" class="text-decoration-none">

                        <h5 class="fw-bold text-white p-0 fs-4 logo">I...Product</h5>
                    </a>
                </div>
                <div class="col-6 d-flex justify-content-end">
                    <a href="/view" class="btn btn-warning fw-bold">
                        Add Product
                    </a>
                </div>
            </div>
        </div>
    </header>
    <section class="py-5">
        <div class="container">
            <div class="row">
                <% if(products.length != 0){ %>
                <table class="table  table-striped table-bordered">
                    <thead class="border-top ">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Title</th>
                            <!-- <th scope="col">description</th> -->
                            <th scope="col">Category</th>
                            <th scope="col">Brand</th>
                            <th scope="col">Rating</th>
                            <th scope="col">Discount</th>
                            <th scope="col">Price</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach((product , index)=> { %>
                            <tr>
                                <th scope="row">
                                    <%= index +1%>
                                </th>
                                <td>
                                    <%= product.title %>
                                </td>
                                <!-- <td><%= product.description %></td> -->
                                <td>
                                    <%= product.category %>
                                </td>
                                <td>
                                    <%= product.brand %>
                                </td>
                                <td>
                                    <%= product.rating %>
                                </td>
                                <td>
                                    <%= product.discount %>
                                </td>
                                <td>
                                    <%= product.price %>
                                </td>
                                <td class="col-2">
                                    <a class="btn btn-danger" href="/delete/<%= product.id%>">Delete</a>
                                    <a class="btn btn-success" href="/Edit/<%= product.id%>">Edit</a>
                                </td>
                            </tr>
                            <% })%>

                    </tbody>
                </table>
                <%}else{%>
                    <p class="fs-3 text-center fw-bold logo">
                        No Products Found
                    </p>
                    <a href="/view" class="text-center">
                        Add Product
                    </a>
                    <% } %>
            </div>
        </div>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>